    "version": "2.0.0",
    "tasks": [
        {
            "label": "ninjaBuildMatrix",
            "type": "shell",
            "command": "ninja",
            "args": [
                "Matrix"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Debug/"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}